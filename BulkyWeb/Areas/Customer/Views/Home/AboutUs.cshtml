@model IEnumerable<Product>

<section class="about-us-section">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <img src="/images/books.jpg" alt="About Us Image" class="img-fluid rounded" />
            </div>
            <div class="col-md-6">
                <h2>About Us</h2>
                <p class="about-us-text">
                    We are a company dedicated to providing books and services that meet the highest standards for our customers. Our mission is to deliver the best books and support local bookstore communities.
                </p>
                <p class="about-us-text">
                    Every purchase made on our platform financially supports independent bookstores, providing them with the tools to compete online and maintain their presence in local communities.
                </p>
            </div>
        </div>
    </div>
</section>
<section class="how-it-works-section">
    <div class="container">
        <h2 class="text-center mb-5">How It Works</h2>

        <div class="row text-center">
            <!-- Pick A Store -->
            <div class="col-md-3">
                <div class="how-it-works-card">
                    <img src="/images/pick.jpg" alt="Pick A Store" class="img-fluid mb-3" />
                    <h4>Pick A Store</h4>
                    <p>Visit our find a local bookstore page and select the bookstore you'd like to support.</p>
                </div>
            </div>

            <!-- Buy A Book -->
            <div class="col-md-3">
                <div class="how-it-works-card">
                    <img src="/images/buy.jpg" alt="Buy a Book" class="img-fluid mb-3" />
                    <h4>Buy a Book</h4>
                    <p>Your order will be filled directly by our distributor and the full profit will go to your selected bookstore.</p>
                </div>
            </div>

            <!-- Enjoy Books -->
            <div class="col-md-3">
                <div class="how-it-works-card">
                    <img src="/images/en.jpg" alt="Enjoy Books" class="img-fluid mb-3" />
                    <h4>Enjoy Books</h4>
                    <p>Enjoy reading your books and feel good knowing you supported your local bookstore!</p>
                </div>
            </div>

            <!-- Help Bookstores -->
            <div class="col-md-3">
                <div class="how-it-works-card">
                    <img src="/images/heart.jpg" alt="Help Bookstores" class="img-fluid mb-3" />
                    <h4>Help Bookstores</h4>
                    <p>We donate profits directly to bookstores, both the funds from direct purchases and our profit pool.</p>
                </div>
            </div>
        </div>
    </div>
</section>

